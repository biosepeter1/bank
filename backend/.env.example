# ============================================
# DATABASE
# ============================================
# Connection pool parameters help prevent connection drops in production:
# - connection_limit: Maximum number of connections in the pool (default: num_cpus * 2 + 1)
# - pool_timeout: Time to wait for a connection from the pool (seconds)
# - connect_timeout: Time to wait for a new connection (seconds)
DATABASE_URL="postgresql://username:password@localhost:5432/rdn_banking?schema=public&connection_limit=10&pool_timeout=30&connect_timeout=30"

# ============================================
# APPLICATION
# ============================================
NODE_ENV=development
PORT=3001
API_PREFIX=api

# ============================================
# JWT & SECURITY
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this
JWT_REFRESH_EXPIRES_IN=30d

# ============================================
# ENCRYPTION
# ============================================
ENCRYPTION_KEY=your-32-character-encryption-key-here

# ============================================
# FRONTEND URL (CORS)
# ============================================
FRONTEND_URL=http://localhost:3000

# ============================================
# EMAIL CONFIGURATION (SendGrid)
# ============================================
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@rdn.bank
EMAIL_FROM_NAME=RDN Banking

# ============================================
# SMS CONFIGURATION (Twilio)
# ============================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ============================================
# CARD PROVIDER (Paystack)
# ============================================
PAYSTACK_SECRET_KEY=sk_test_your-paystack-secret-key
PAYSTACK_PUBLIC_KEY=pk_test_your-paystack-public-key
PAYSTACK_BASE_URL=https://api.paystack.co

# ============================================
# CARD PROVIDER (Flutterwave - Alternative)
# ============================================
FLUTTERWAVE_SECRET_KEY=your-flutterwave-secret-key
FLUTTERWAVE_PUBLIC_KEY=your-flutterwave-public-key
FLUTTERWAVE_ENCRYPTION_KEY=your-flutterwave-encryption-key
FLUTTERWAVE_BASE_URL=https://api.flutterwave.com/v3

# ============================================
# FILE STORAGE (AWS S3)
# ============================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=rdn-banking-documents

# ============================================
# FILE STORAGE (Cloudinary - Alternative)
# ============================================
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# ============================================
# 2FA
# ============================================
TWO_FA_APP_NAME=RDN Banking

# ============================================
# AI CHATBOT (Gemini)
# ============================================
GEMINI_API_KEY=your-gemini-api-key-from-google-ai-studio

# ============================================
# ADMIN CREDENTIALS (Initial Setup)
# ============================================
SUPER_ADMIN_EMAIL=superadmin@rdn.bank
SUPER_ADMIN_PASSWORD=SuperAdmin@123
SUPER_ADMIN_FIRSTNAME=Super
SUPER_ADMIN_LASTNAME=Admin

BANK_ADMIN_EMAIL=admin@rdn.bank
