# Database
DATABASE_URL="postgresql://user:password@localhost:5432/banking_platform"

# JWT
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRATION="7d"

# Paystack Configuration
PAYSTACK_SECRET_KEY="sk_test_your_paystack_secret_key"
PAYSTACK_PUBLIC_KEY="pk_test_your_paystack_public_key"
PAYSTACK_CALLBACK_URL="http://localhost:3000/api/webhooks/paystack"

# Paystack Demo Mode (set to true for development/testing)
# In demo mode, webhook signature verification is skipped
# Use /api/webhooks/paystack/demo/success and /api/webhooks/paystack/demo/failed endpoints
PAYSTACK_DEMO_MODE="true"

# Exchange Rate API
EXCHANGE_RATE_API_KEY="your-exchange-rate-api-key"

# Frontend URL
FRONTEND_URL="http://localhost:3001"

# React App Configuration
REACT_APP_API_URL="http://localhost:3000/api"
REACT_APP_PAYSTACK_PUBLIC_KEY="pk_test_your_paystack_public_key"

# Environment
NODE_ENV="development"
PORT="3000"

# Email Configuration (Optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Redis (Optional - for caching/sessions)
REDIS_URL="redis://localhost:6379"

# AWS S3 (Optional - for file uploads)
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_S3_BUCKET="your-bucket-name"